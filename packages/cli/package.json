{
  "name": "repo-harness",
  "version": "0.1.0",
  "description": "Bootstrap agent-ready Next.js repos with devcontainer, checks, and repro packs",
  "type": "module",
  "bin": { "repo-harness": "./dist/index.js" },
  "files": ["dist", "template"],
  "scripts": {
    "prebuild": "node -e \"const{cpSync}=require('fs');const{join}=require('path');const c=process.cwd();cpSync(join(c,'..','template'),join(c,'template'),{recursive:true})\"",
    "build": "tsup",
    "dev": "tsup --watch",
    "pretest": "pnpm run build",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": { "commander": "^12.1.0" },
  "devDependencies": { "tsup": "^8.3.5", "typescript": "^5.7.2", "vitest": "^2.1.6" },
  "engines": { "node": ">=18" },
  "repository": { "type": "git", "url": "https://github.com/nloffredo17/repo-harness", "directory": "packages/cli" },
  "homepage": "https://github.com/nloffredo17/repo-harness#readme",
  "bugs": { "url": "https://github.com/nloffredo17/repo-harness/issues" },
  "keywords": ["cli", "nextjs", "template", "scaffold", "devcontainer", "harness", "playwright", "vitest"],
  "license": "MIT",
  "publishConfig": {"access": "public"}
}
